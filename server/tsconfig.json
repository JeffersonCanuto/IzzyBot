{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "types": ["vitest/globals"],
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./config.ts"
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "src/public/*",
    "eslint.config.ts",
    "vitest.config.mts",
    "config.ts",
    "scripts"
  ]
}
